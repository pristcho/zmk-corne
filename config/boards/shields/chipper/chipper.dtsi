
#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <9>;
		rows = <4>;
//   | SW1 |      | SW1  | SW2  | SW3  | SW4  | SW5  |      | SW1  | SW2  | SW3  | SW4  | SW5  | 
//   | SW2 |      | SW6  | SW7  | SW8  | SW9  | SW10 |      | SW6  | SW7  | SW8  | SW9  | SW10 |  
//                       | SW11 | SW12 | SW13 | SW14 |      | SW11 | SW12 | SW13 | SW14 |   
//                              | SW15 |   								  | SW15 |
		map = <
RC(3,0)		RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
RC(4,0) 	RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
			RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) 	RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
                    RC(3,1) RC(3,2) RC(3,3) RC(3,4)		RC(3,5) RC(3,6) RC(3,7) RC(3,8)
						    RC(4,2)							            RC(4,7)
		>;
	};

	five_column_transform: keymap_transform_1 {
		compatible = "zmk,matrix-transform";
		columns = <9>;
		rows = <4>;
//   | SW1 |      | SW1  | SW2  | SW3  | SW4  | SW5  |      | SW1  | SW2  | SW3  | SW4  | SW5  | 
//   | SW2 |      | SW6  | SW7  | SW8  | SW9  | SW10 |      | SW6  | SW7  | SW8  | SW9  | SW10 |  
//                       | SW11 | SW12 | SW13 | SW14 |      | SW11 | SW12 | SW13 | SW14 |   
//                              | SW15 |   								  | SW15 |
		map = <
RC(3,0)		RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
RC(4,0) 	RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
			RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) 	RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
                    RC(3,1) RC(3,2) RC(3,3) RC(3,4)		RC(3,5) RC(3,6) RC(3,7) RC(3,8)
						    RC(4,2)							            RC(4,7)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";

		diode-direction = "col2row";
		row-gpios
			= <&gpio1 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>     //Row1
			, <&gpio1 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>     //Row2
			, <&gpio1 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    //Row3
			, <&gpio1 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    //Row4
			, <&gpio0 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    //Row5
			;

		col-gpios
			= <&gpio1 15 GPIO_ACTIVE_HIGH>   //Col1
			, <&gpio1 13 GPIO_ACTIVE_HIGH>   //Col2
			, <&gpio1 10 GPIO_ACTIVE_HIGH>   //Col3
			, <&gpio1 11 GPIO_ACTIVE_HIGH>   //Col4
			, <&gpio1 14 GPIO_ACTIVE_HIGH>   //Col5
			, <&gpio1 12 GPIO_ACTIVE_HIGH>   //Col6
			, <&gpio1 8 GPIO_ACTIVE_HIGH>   //Col7
			, <&gpio1 6 GPIO_ACTIVE_HIGH>   //Col8
			, <&gpio1 4 GPIO_ACTIVE_HIGH>   //Col9
			, <&gpio1 2 GPIO_ACTIVE_HIGH>   //Col10
			;

	};
   
	// TODO: per-key RGB node(s)?
};





&pinctrl {
       i2c0_default: i2c0_default {
               group1 {
                       psels = <NRF_PSEL(TWIM_SDA, 0, 26)>,
                               <NRF_PSEL(TWIM_SCL, 0, 20)>;
               };
       };

       i2c0_sleep: i2c0_sleep {
               group1 {
                       psels = <NRF_PSEL(TWIM_SDA, 0, 26)>,
                               <NRF_PSEL(TWIM_SCL, 0, 20)>;
                       low-power-enable;
               };
       };
};


display_i2c: &i2c0 {
    compatible = "nordic,nrf-twi";
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
 };

&display_i2c {
 	status = "okay";
	oled: ssd1306@3c {
		compatible = "solomon,ssd1306fb";
		reg = <0x3c>;
		label = "DISPLAY";
		width = <128>;
		height = <32>;
		segment-offset = <0>;
		page-offset = <0>;
		display-offset = <0>;
		multiplex-ratio = <31>;
		segment-remap;
		com-invdir;
		inversion-on;
		com-sequential;
		prechargep = <0x22>;
	};
};

/ {
  chosen {
    zephyr,display = &oled;
  };
};

